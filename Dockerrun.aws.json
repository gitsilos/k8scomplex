{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    { 	"name" : "client",
	"image" : "d4rk8s/multi-client",
 	"hostname" : "client",
	"essential": false
    },

    { 	"name" : "server",
	"image" : "d4rk8s/multi-server",
 	"hostname" : "api",
	"essential": false
    },
  
    { 	"name" : "worker",
	"image" : "d4rk8s/multi-worker",
 	"hostname" : "worker",
	"essential": false
    },
    { 	"name" : "nginx",
	"image" : "d4rk8s/multi-nginx",
	"hostname": "nginx",
	"essential": true,
	"portMappings": 
	[
		{
			"hostPort":80,
			"containerPort":80
		}
	],
	"links": ["client", "server"]
    }
  ]
}
